{
  "exclude": ["node_modules", "**/__tests__/*", "package.json"],
  "include": ["src"],
  "compilerOptions": {
    "outDir": "outputs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES6",
    "strict": true,
    "jsx": "react-native",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/types", "@types"],
    "allowJs": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "noEmit": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "react-native-sqlite-storage": ["node_modules/@types/react-native-sqlite-storage"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
